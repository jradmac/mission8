@model Quadrent1


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h1 class="text-center">Add Task</h1>

                <form method="post">
                    <input type="hidden" asp-for="Q1Id"/>

                    <div class="mb-3">
                        <label asp-for="Task" class="form-label">Task:</label>
                        <input asp-for="Task" class="form-control"/>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DataType" class="form-label">Due Date:</label>
                        <input asp-for="DataType" type="date" class="form-control"/>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Quadrant" class="form-label">Quadrant:</label>
                        <select asp-for="Quadrant" class="form-select">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TypeId" class="form-label">Task Type:</label>
                        <select asp-for="TypeId" class="form-select">
                            <option value="">Select a Type</option>
                            @foreach (mission8.Models.Type c in ViewBag.Type)
                            {
                                <option value="@c.TypeId">@c.TypeName</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TruFalse" class="form-label">Completed?:</label>
                        <select asp-for="TruFalse" class="form-select">
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit Task</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
